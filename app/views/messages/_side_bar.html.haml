.side-bar
  .side-bar__user-name
    .side-bar__user-name__name-container
      .side-bar__user-name__name-container__name
        = current_user.name
      .side-bar__user-name__name-container__option
        = link_to new_group_path, class: "side-bar__user-name__name-container__option__icon" do
          = icon("far", "edit")
          %span<>
        = link_to edit_user_path(current_user), class: "side-bar__user-name__name-container__option__icon" do
          = icon("fa", "cog")
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        .side-bar__group-list__group__title
          = link_to "#", class: "side-bar__group-list__group__title__link" do
            = group.name
        .side-bar__group-list__group__latest-message
          %p メッセージはまだありません