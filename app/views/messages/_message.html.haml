%div.chat-main__message-list__message-container__message{data: {message: {id: message.id}}}
  .chat-main__message-list__message-container__message__message-upper
    %p.chat-main__message-list__message-container__message__message-upper__name
      = message.user.name
    %p.chat-main__message-list__message-container__message__message-upper__update-time
      = message.created_at.strftime("%Y年%-m月%d日 %-H時%-M分")
  %p.chat-main__message-list__message-container__message__text
    = message.content if message.content.present?
    %br/
    = image_tag message.image.url if message.image.present?